{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "javac",
            "args": [
                "--module-path",
                "/Applications/MAMP/htdocs/ML/JAVA/javafx-sdk-22.0.2",
                "--add-modules",
                "javafx.controls,javafx.fxml",
                "-d",
                "bin",
                "src/**/*.java"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$javac"
            ]
        },
        {
            "label": "run",
            "type": "shell",
            "command": "java",
            "args": [
                "--module-path",
                "/Applications/MAMP/htdocs/ML/JAVA/javafx-sdk-22.0.2",
                "--add-modules",
                "javafx.controls,javafx.fxml",
                "-cp",
                "bin",
                "com.example.classes.Main"
            ],
            "dependsOn": "compile",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}